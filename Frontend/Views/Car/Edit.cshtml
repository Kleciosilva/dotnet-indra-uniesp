@model Backend.CarModel
@{
    ViewData["title"] = "Editar Carro";
}

<h3 class="title">@ViewData["title"]</h3>

@using (Html.BeginForm("Update", "Car", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Id)

        @Html.Label("Nome")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Modelo")
        @Html.TextBoxFor(x => x.Model, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ano de fabricação")
        @Html.TextBoxFor(x => x.FactoryYear, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Cor")
        @Html.TextBoxFor(x => x.Color, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
}